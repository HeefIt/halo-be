<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.heef.halo.domain.basic.mapper.SensitiveWordsMapper">

    <!-- 通用查询字段列表 -->
    <sql id="Base_Column_List">
        id
        ,        words,        type,        is_deleted    </sql>

    <!-- 分页查询敏感词表数据 -->
    <select id="selectPage" resultType="com.heef.halo.domain.basic.entity.SensitiveWords">
        SELECT
        <include refid="Base_Column_List"/>
        FROM sensitive_words
        <where>
            <if test="param != null">
                <if test="param.id != null and param.id != ''">
                    AND id = #{param.id}
                </if>
                <if test="param.words != null and param.words != ''">
                    AND words = #{param.words}
                </if>
                <if test="param.type != null and param.type != ''">
                    AND type = #{param.type}
                </if>
                <if test="param.isDeleted != null and param.isDeleted != ''">
                    AND is_deleted = #{param.isDeleted}
                </if>
            </if>
        </where>
        ORDER BY id DESC
        <if test="offset != null and limit != null">
            LIMIT #{offset}, #{limit}
        </if>
    </select>

    <!-- 条件查询敏感词表列表 -->
    <select id="selectList" resultType="com.heef.halo.domain.basic.entity.SensitiveWords">
        SELECT
        <include refid="Base_Column_List"/>
        FROM sensitive_words
        <where>
            <if test="param != null">
                <if test="param.id != null and param.id != ''">
                    AND id = #{param.id}
                </if>
                <if test="param.words != null and param.words != ''">
                    AND words = #{param.words}
                </if>
                <if test="param.type != null and param.type != ''">
                    AND type = #{param.type}
                </if>
                <if test="param.isDeleted != null and param.isDeleted != ''">
                    AND is_deleted = #{param.isDeleted}
                </if>
            </if>
        </where>
        ORDER BY id DESC
    </select>

    <!-- 根据ID查询敏感词表详情 -->
    <select id="selectById" resultType="com.heef.halo.domain.basic.entity.SensitiveWords">
        SELECT
        <include refid="Base_Column_List"/>
        FROM sensitive_words
        WHERE id = #{id}
    </select>

    <!-- 新增敏感词表数据 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO sensitive_words (words, type, is_deleted)
        VALUES (#{entity.words}, #{entity.type}, #{entity.isDeleted})
    </insert>

    <!-- 批量新增敏感词表数据 -->
    <insert id="insertBatch" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO sensitive_words (
        words, type, is_deleted ) VALUES
        <foreach collection="list" item="item" separator=",">
            (
            #{item.words}, #{item.type}, #{item.isDeleted} )
        </foreach>
    </insert>

    <!-- 更新敏感词表数据 -->
    <update id="update">
        UPDATE sensitive_words
        <set>
            <if test="entity.words != null">
                words = #{entity.words},
            </if>
            <if test="entity.type != null">
                type = #{entity.type},
            </if>
            <if test="entity.isDeleted != null">
                is_deleted = #{entity.isDeleted}
            </if>
        </set>
        WHERE id = #{entity.id}
    </update>

    <!-- 根据ID删除敏感词表数据 -->
    <delete id="deleteById">
        DELETE
        FROM sensitive_words
        WHERE id = #{id}
    </delete>

    <!-- 批量删除敏感词表数据 -->
    <delete id="deleteBatch">
        DELETE FROM sensitive_words
        WHERE id IN
        <foreach collection="ids" item="id" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>

    <!-- 统计敏感词表数据数量 -->
    <select id="count" resultType="java.lang.Long">
        SELECT COUNT(*) FROM sensitive_words
        <where>
            <if test="param != null">
                <if test="param.id != null and param.id != ''">
                    AND id = #{param.id}
                </if>
                <if test="param.words != null and param.words != ''">
                    AND words = #{param.words}
                </if>
                <if test="param.type != null and param.type != ''">
                    AND type = #{param.type}
                </if>
                <if test="param.isDeleted != null and param.isDeleted != ''">
                    AND is_deleted = #{param.isDeleted}
                </if>
            </if>
        </where>
    </select>

    <!-- 根据ID判断敏感词表是否存在 -->
    <select id="existsById" resultType="java.lang.Boolean">
        SELECT COUNT(*) > 0
        FROM sensitive_words
        WHERE id = #{id}
    </select>

</mapper>
